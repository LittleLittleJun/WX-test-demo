/* pages/posts/post-item/post-item-template.wxss */
.post-contsiner {
  display: flex;
  flex-direction: column;
  margin: 20rpx 0 40rpx 0;
  background: #fff;
  border-bottom: solid 1px #ededed;
  border-top: solid 1px #ededed;
  padding-bottom: 8rpx;
}

.post-auto-data {
  margin: 10 rpx 0 20rpx 10rpx;
  padding: 8px;
}
.post-auto-data image {
  width: 60rpx;
  height: 60rpx;
  vertical-align: middle;
}
.post-auto-data text {
  margin-left: 20rpx;
  margin-bottom: 10px;
  vertical-align: middle;
  font-size: 26rpx;
}
.post-image {
  width: 100%;
  height: 340rpx;
  margin-bottom: 8px;
}
.post-content {
  color: #666;
  font-size: 28rpx;
  margin-bottom: 20rpx;
  letter-spacing: 2rpx;
  line-height: 40rpx;
  padding: 8px;
}
.post-like {
  font-size: 13rpx;
  flex-direction: row;
  line-height: 16px;
  margin-left: 10px;
}
.post-like image {
  height: 16px;
  width: 16px;
  margin-right: 8px;
  vertical-align: middle;
}
.post-like text {
  vertical-align: middle;
  margin-right: 20px;
  font-size: 26rpx;
}